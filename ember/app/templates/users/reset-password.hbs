<form {{action "resetPassword" on="submit"}} role="form">
  <div {{bindAttr class=":controls errors.password:error :form-group"}}>
    {{input type="password" value=password placeholder="Password" class="form-control"}}
    <small class="below">{{errors.password}}</small>
  </div>

  <div {{bindAttr class=":controls errors.password_confirmation:error :form-group"}}>
    {{input type="password" value=password_confirmation placeholder="Confirm Password" class="form-control"}}
    <small class="below">{{errors.password_confirmation}}</small>
  </div>
    
  <div class="form-group">
    <button type="submit" class="login btn btn-primary">Reset Password</button>
  </div>

  <div class="form-group">
    <center>
      {{link-to '< Go Back' 'sessions.new'}}
    </center>
  </div>
</form>

