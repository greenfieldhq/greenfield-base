<form {{action "forgotPassword" on="submit"}} role="form">
  <div class="controls form-group">
    {{input type="text" value=email placeholder="Email Address" class="username form-control"}}
    <small class="below">{{errors.email}}</small>
  </div>

  <div class="form-group">
    <button type="submit" class="login btn btn-primary">Recover Password</button>
  </div>

  <div class="form-group">
    <center>
      {{link-to 'Go Back' 'login' classNames='back-button'}}
    </center>
  </div>
</form>
