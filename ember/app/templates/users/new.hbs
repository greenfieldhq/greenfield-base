<form {{action "createUser" on="submit"}} role="form">
  <div {{bindAttr class=":controls errors.name:error :form-group"}}>
    {{input type="email" value=email placeholder="Email Address" class="form-control"}}
    <small class="below">{{errors.email}}</small>
  </div>

  <div {{bindAttr class=":controls errors.password:error :form-group"}}>
    {{input type="password" value=password placeholder="Password" class="form-control"}}
    <small class="below">{{errors.password}}</small>
  </div>

  <div {{bindAttr class=":controls errors.password_confirmation:error :form-group"}}>
    {{input type="password" value=password_confirmation placeholder="Confirm Password" class="form-control"}}
    <small class="below">{{errors.password_confirmation}}</small>
  </div>

  <br/>

  <div class="form-group">
    <div class="row">
      <div class="col-md-1 col-sm-1 col-xs-2">
        <center>
          {{input type="checkbox" name="agree" checked=agree id="agree"}}
        </center>
      </div>
      <div class="col-md-11 col-sm-10 col-xs-10">
        <label for="agree">I have read and agree to the {{link-to 'Terms of Use' 'users.terms'}} and {{link-to 'Privacy Policy' 'users.privacy'}}</label>
        <small class="below">{{errors.agree}}</small>
      </div>
    </div>
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-default">Register</button>
  </div>

  <div class="form-group">
    <center>
      {{link-to 'Go Back' 'sessions.new' classNames='back-button'}}
    </center>
  </div>

</form>
